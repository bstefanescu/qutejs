<x-tag name='time'>
	<div>{{now()}}</div>
</x-tag>

export default Qute('time', {
	now() {
		return new Date().toTimeString();
	},
	connected() {
		var self = this;
		this.timer = window.setInterval(function() { self.update(); }, 500)
	},
	disconnected() {
		if (this.timer) {
			window.clearInterval(this.timer);
			this.timer = null;
		}
	}
});

